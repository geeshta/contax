{% macro field_as_row(field) %}
  <tr>
    <td>
      {{ field.label }}
    </td>
    <td>
      {{ field }}
    </td>
    {% if field.errors %}
      {% for error in field.errors %}
        <td>
          {{ error }}
        </td>
      {% endfor %}
    {% endif %}
  </tr>
{% endmacro %}
{% macro form_as_rows(form) %}
  {% for field in form %}
    {{ field_as_row(field) }}
  {% endfor %}
{% endmacro %}
{% macro form_errors(form) %}
  {% if form.form_errors %}
    <div>
      <ul>
        {% for error in form.form_errors %}
          <li>
            {{ error }}
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
{% endmacro %}
