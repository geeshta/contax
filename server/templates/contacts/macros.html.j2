{% macro as_table_list(contacts) %}
  <table>
    <tbody>
      {% for contact in contacts %}
        <tr>
          <td>
            {{ contact.name }}
          </td>
          <td>
            {{ contact.phone_number }}
          </td>
          <td>
            {{ contact.email }}
          </td>
          <td>
            <a href="{{ url_for("contact_detail_page", id=contact.id) }}">Detail</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endmacro %}
{% macro as_table(contact) %}
  <table>
    <tbody>
      <tr>
        <td>
          <strong>{{ contact.name }}</strong>
        </td>
      </tr>
      <tr>
        <td>
          {{ contact.phone_number }}
        </td>
      </tr>
      <tr>
        <td>
          {{ contact.email }}
        </td>
      </tr>
    </tbody>
  </table>
{% endmacro %}
