{% macro as_table_list(contacts, htmx=False) %}
  <table>
    <tbody>
      {% for contact in contacts %}
        <tr>
          <td>
            {{ contact.name }}
          </td>
          <td>
            {{ contact.phone_number }}
          </td>
          <td>
            {{ contact.email }}
          </td>
          <td>
            {% if htmx %}
              <a hx-get="{{ url_for("contact_detail_htmx", id=contact.id) }}"
                 hx-target="#content"
                 hx-select="#content"
                 hx-swap="outerHTML"
                 hx-push-url="true"
                 href="{{ url_for("contact_detail_htmx", id=contact.id) }}">Detail</a>
            {% else %}
              <a href="{{ url_for("contact_detail_page", id=contact.id) }}">Detail</a>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endmacro %}
{% macro as_table(contact) %}
  <table>
    <tbody>
      <tr>
        <td>
          <strong>{{ contact.name }}</strong>
        </td>
      </tr>
      <tr>
        <td>
          {{ contact.phone_number }}
        </td>
      </tr>
      <tr>
        <td>
          {{ contact.email }}
        </td>
      </tr>
    </tbody>
  </table>
{% endmacro %}
